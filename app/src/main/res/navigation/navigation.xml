<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fragment_all_players">

    <fragment
        android:id="@+id/fragment_all_players"
        android:name="com.example.snookerapi.fragments.AllPlayersFragment"
        tools:layout="@layout/fragment_all_players">

        <action
            android:id="@+id/to_player_profile"
            app:destination="@+id/fragment_player_profile" />

    </fragment>


    <fragment
        android:id="@+id/fragment_player_profile"
        android:name="com.example.snookerapi.fragments.PlayerProfileFragment"
        tools:layout="@layout/fragment_player_profile">

        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>

</navigation>